<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        
        <!-- hr.applicant.refuse.reason inherit form view -->
        <record id="hr_applicant_refuse_reason_view_form" model="ir.ui.view">
            <field name="name">hr.applicant.refuse.reason.inherit.view.form</field>
            <field name="model">hr.applicant.refuse.reason</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_refuse_reason_view_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <xpath expr="/form/sheet/div[hasclass('oe_title')]" position="after">
                    <group>
                        <group>
                            <field name="template_id"/>
                        </group>
                        <group>
                        </group>                        
                    </group>
                </xpath>
            </field>
        </record>

        <!-- hr.applicant.refuse.reason inherit tree view -->
        <record id="hr_applicant_refuse_reason_view_tree" model="ir.ui.view">
            <field name="name">hr.applicant.refuse.reason.inherit.view.tree</field>
            <field name="model">hr.applicant.refuse.reason</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_refuse_reason_view_tree"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <field name="name" position="after">
                    <field name="template_id"/>
                </field>
            </field>
        </record>
        
    </data>
</odoo>